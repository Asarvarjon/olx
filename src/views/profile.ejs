<%- include("./parts/header.ejs") %>

<section class="mt-5">
    <div class="container">
        <h3 class="text-center text-primary">
            <%= user.name%>'profile
        </h3>

        <div class="row mt-3">
            <div class="col-lg-6">
                 
                <!-- Button trigger modal -->
                <button type="button" class="btn btn-primary text-center" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
                    Add category
                </button>

                <!-- Modal -->
                <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false"
                    tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title text-center" id="staticBackdropLabel">Add category</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"
                                    aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                               <form method="POST"  enctype="multipart/form-data" action="/add_category">
                                    <input type="text" class="form-control mt-2" name="name" placeholder="Category name">
                                    <input type="file" name="file"  class="form-control mt-2" placeholder="Category name">
                                <button type="submit" data-bs-dismiss="modal" class="btn mt-2 w-100 btn-primary">
                                    Add
                                </button>
                               </form>
                            </div> 
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">

            </div>
        </div>
    </div>
</section>



<%- include("./parts/footer.ejs") %>
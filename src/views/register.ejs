<%- include("./parts/header.ejs")  %> 
<% var error %> 
   
<section>
    <div class="container mt-4">
        <div class="row mt-5 d-flex flex-column align-items-center">
            <h2 class="text-center">
                Sign up
            </h2>
            
            <div class="col-sm-6 col-10  mt-3">
                <% if(error) { %> 
                    <div class="alert alert-danger">
                        <%= error  %> 
                    </div>
                <% } %> 
                <form action="/sign_up" method="POST" autocomplete="off">
                    <input type="text" name="name" placeholder="Ismingizni kiriting" class="form-control mt-2" required autocomplete="off">
                    <input type="email" placeholder="Emailingizni kiriting" name="email" class="form-control mt-2" required autocomplete="off">
                    <input type="tel" name="phone" placeholder="Raqamingizni kiriting" class="form-control mt-2" required autocomplete="off">
                    <input type="password" name="password" placeholder="Parolni kiriting" class="form-control mt-2" required autocomplete="off">
                    <button type="submit" class="btn mt-2 w-100 btn-primary">
                       Sign up
                    </button>
                </form>
                <div class="mt-2 text-center">
                    Do you have account? 
                    <a href="/login">Login</a>
                </div>
            </div>
        </div>
    </div>
</section>


<%- include("./parts/footer.ejs")  %> 
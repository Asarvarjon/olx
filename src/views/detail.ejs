<%- include("./parts/header.ejs")  %> 
<% var detail = detail || {} %> 

<section>
    <div class="container mt-4">
        <div class="row mt-5">
            <div class="col-lg-6">
                <img src="/files/<%= detail.photo %> "  class="w-100">
            </div>

            <div class="col-lg-6">
                <h2 class="text-danger">
                    <%= detail.name  %> 
                </h2> 

                <p class="mt-3 h3">
                    <span class="text-primary">Narxi: </span> <%= detail.price  %> 
                </p>

                <p class="mt-3">
                    <%= detail.content  %> 
                </p>

                <a href="tel:<%= detail.phone%> " class="mt-3 btn btn-success">
                    Telefon qilish
                </a>
            </div>
        </div>
    </div>
</section>




